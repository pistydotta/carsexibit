<%- include ("../partials/header.ejs")  %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">You're editing the <%=car.name%></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/cars/<%=car._id%>?_method=PUT" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="car[name]" value="<%=car.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="car[image]" value="<%=car.image%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Edit</button>
                </div>
            </form>
            <a href="/cars">Go Back</a>
        </div>
    </div>
</div>

<%- include ("../partials/footer.ejs")  %>